<table style="width: 100%">
  {{#each acters}}
    <tr>
      <td>
        <table>
          <tr>
            <td style="width: 50px"><img src="{{avatarUrl acter}}"
                style="vertical-align: middle; width: 50px; height: 50px; border-radius: 50%;" /></td>
            <td>
              <h2>{{acter.name}}</h2>
            </td>
          </tr>
        </table>

        {{#if posts.length}}
          <h3>Posts</h3>
          {{#each posts}}
            <p style='font-family: sans-serif; font-size: 14px; font-weight: normal; margin: 0; Margin-bottom: 15px;'>
              On {{dateFormatShort createdAt}} {{Author.name}} <a href="{{notificationUrl}}">wrote</a>:</p>
            <blockquote
              style='font-family: sans-serif; font-size: 14px; font-weight: normal; margin: 0; Margin-bottom: 15px; Margin-left: 5px; Margin-right: 5px; Background-color: #f9f9f9; padding: 5px;'>
              {{{marked content}}}
            </blockquote>
          {{/each}}
        {{/if}}
        {{#if activities.length}}
          <h3>Activities</h3>
          {{#each activities}}
            <h4>
              <a href="{{notificationUrl}}">{{Acter.name}}</a>
            </h4>
            <p style='font-family: sans-serif; font-size: 14px; font-weight: bold; margin: 0; Margin-bottom: 15px;'>
              {{ActivityType.name}}
              {{dateFormat startAt endAt isAllDay}}
            </p>
            <p style='font-family: sans-serif; font-size: 14px; font-weight: normal; margin: 0; Margin-bottom: 15px;'>
              {{Acter.description}}
            </p>
            <p
              style='font-family: sans-serif; font-size: 12px; font-weight: normal; margin: 0; Margin-bottom: 15px; text-align: right'>
              Created by {{createdByUser.Acter.name}}
            </p>
          {{/each}}
        {{/if}}
      </td>
    </tr>
    <tr>
      <td style="height: 20px;">
        <hr />
      </td>
    </tr>
  {{/each}}
</table>