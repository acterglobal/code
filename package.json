{
  "name": "acter",
  "version": "0.0.0",
  "description": "The platform for coordinating action on global challenges",
  "main": "index.js",
  "repository": "git@github.com:acterglobal/code.git",
  "author": "Damon Toal-Rossi <damon@vestervand.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @acter/web dev",
    "build": "yarn workspace @acter/web build",
    "start": "yarn workspace @acter/web start",
    "storybook": "yarn workspace @acter/components storybook",
    "lint": "eslint . --ext .js,.mjs,.ts,.tsx",
    "test": "rm -rf .next out && env-cmd jest",
    "test:prepush": "yarn lint --quiet && yarn cover && yarn build",
    "test:ci": "rm -rf .next out && jest",
    "cover": "rm -rf .next && env-cmd --silent jest --coverage",
    "postinstall": "yarn generate",
    "husky-install": "husky install",
    "generate": "yarn workspace @acter/schema generate",
    "db:migrate": "yarn workspace @acter/schema db:migrate",
    "db:migrate:run": "yarn workspace @acter/schema db:migrate:run",
    "db:reset": "yarn workspace @acter/schema db:reset",
    "db:seed": "yarn workspace @acter/schema db:seed"
  },
  "dependencies": {
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "babel-plugin-transform-typescript-metadata": "^0.3.1",
    "env-cmd": "^10.1.0",
    "graphql": "^15.4.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^5.0.0",
    "@testing-library/user-event": "^12.6.0",
    "@types/graphql-fields": "^1.3.3",
    "@types/jest": "^26.0.20",
    "@types/markdown-draft-js": "^2.2.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-draft-wysiwyg": "^1.13.2",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "graphql-tag": "^2.11.0",
    "husky": "^5.0.9",
    "identity-obj-proxy": "^3.0.0",
    "ignore-loader": "^0.1.2",
    "jest": "^26.6.3",
    "jest-transform-graphql": "^2.1.0",
    "syncpack": "^5.7.11",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.0.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.3.5"
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  }
}
